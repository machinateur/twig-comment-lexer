{
  "type": "library",
  "name": "machinateur/twig-comment-lexer",
  "description": "A custom twig lexer and extension to make comments available for parsing.",
  "keywords": ["twig", "extension", "php", "lexer"],
  "homepage": "https://github.com/machinateur/twig-comment-lexer",
  "license": "MIT",
  "authors": [
    {
      "name": "machinateur",
      "email": "hello@machinateur.dev",
      "homepage": "https://machinateur.dev/"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "require": {
    "twig/twig": "^3.15",
    "php": ">=8.2.0"
  },
  "autoload": {
    "psr-4": {
      "Machinateur\\Twig\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Machinateur\\Twig\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml.dist"
  }
}
